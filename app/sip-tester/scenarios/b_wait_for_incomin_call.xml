<?xml version="1.0" encoding="ISO-8859-2" ?>

<!--  Use with CSV file struct like: 3000;192.168.1.106;[authentication username=3000 password=3000];
      (user part of uri, server address, auth tag in each line)
-->

<scenario name="wait_for_incoming_call">

 <!-- Wait for a call -->

  <recv request="INVITE" rrs="true">
    <action>
    	<ereg regexp=";branch=[^;]*" search_in="hdr" header="Via" check_it="false" assign_to="branch"/>
  	</action>
  </recv>

  <send>
    <![CDATA[
      SIP/2.0 180 Ringing
      [last_Via:]
      [last_Record-Route:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: sip:[service]@[local_ip]:[local_port]
      Content-Length: 0
    ]]>
  </send>

  <pause milliseconds="1000"/>
  
  <send retrans="500">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_Record-Route:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: sip:[service]@[local_ip]:[local_port]
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=-
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 96
      a=rtpmap:96 opus/48000/2
    ]]>
  </send>

  <recv request="ACK" rrs="true">
    <action>
      <ereg regexp=": *(.*)" search_in="hdr" header="To" assign_to="_,us"/><!-- with tag -->
      <ereg regexp=": *(.*)" search_in="hdr" header="From" assign_to="_,them"/>
    </action>
  </recv>
  <Reference variables="_"/>

  <!-- Send some audio to avoid rtptimeout timers kicking in. -->
  <nop>
    <action>
      <!-- <exec play_pcap_audio="10_0_0_148_61942.pcap"/> -->
      <exec play_pcap_audio="chopin_new.pcap"/>
    </action>
  </nop>

  <pause milliseconds="120000"/>

  <send start_txn="bye" retrans="500">
    <![CDATA[
      BYE [next_url] SIP/2.0
      Via: SIP/2.0/[transport] [local_ip]:[local_port];[$branch]
      [routes]
      From: [$us]
      To: [$them]
      [last_Call-ID:]
      CSeq: [cseq] BYE
      Contact: sip:[service]@[local_ip]:[local_port]
      Content-Length: 0
    ]]>
  </send>

  <recv response="200" response_txn="bye"/>

  <timewait milliseconds="2000"/><!-- retransmit 200's for a while -->


</scenario>
